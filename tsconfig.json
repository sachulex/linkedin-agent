{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
